
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_TemaAdminLTE.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="box">
                    <div class="small-box bg-aqua">
                        <div class="inner">
                            <h3 id="totalData">-</h3>

                            <p>Total Data</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-database"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                    <!-- Loading (remove the following to stop the loading)-->
                    <div class="overlay" id="totalDatax" style="display:block;">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                    <!-- end loading -->
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <div class="box">
                    <!-- small box -->
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3 id="sukses">-</h3>

                            <p>Sukses</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-check"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                    <!-- Loading (remove the following to stop the loading)-->
                    <div class="overlay" id="suksesx" style="display:block;">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                    <!-- end loading -->
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <div class="box">
                    <!-- small box -->
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3 id="onproses">-</h3>

                            <p>On Progress</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-spinner"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                    <!-- Loading (remove the following to stop the loading)-->
                    <div class="overlay" id="onprosesx" style="display:block;">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                    <!-- end loading -->
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <div class="box">
                    <!-- small box -->
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3 id="gagal">-</h3>

                            <p>Gagal</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-close"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                    <!-- Loading (remove the following to stop the loading)-->
                    <div class="overlay" id="gagalx" style="display:block;">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                    <!-- end loading -->
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
            </section>
            <!-- /.Left col -->
            <!-- right col (We are only adding the ID to make the widgets sortable)-->
            <section class="col-lg-5 connectedSortable">
            </section>
            <!-- right col -->
        </div>
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
</div>

@section js{
    <script>

        $(function () {

            setInterval(function () {
                $.get("@Url.Action("getOnProses", "Dashboard")", function (data, status) {
                    $("#onproses").text(data);
                    if (data == 0) {
                        $('#onprosesx').css('display', 'none');
                    } else {
                        $('#onprosesx').css('display', 'block');
                    }
                    
                });
            },1000);

            setInterval(function () {
                loadLink()
            }, 5000);
        });
            function loadLink() {
                $.get("@Url.Action("getTotalData","Dashboard")", function (data, status) {
                    $("#totalData").text(data);
                    $('#totalDatax').css('display', 'none');
                });

                $.get("@Url.Action("getSended", "Dashboard")", function (data, status) {
                    $("#sukses").text(data);
                    $('#suksesx').css('display', 'none');
                });

                $.get("@Url.Action("getErrors", "Dashboard")", function (data, status) {
                    $("#gagal").text(data);
                    $('#gagalx').css('display', 'none');
                });
            }
    </script>
}

